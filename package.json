{
  "name": "resilient-ws",
  "description": "A resilient websocket client for Node.js and the browser. Provides automatic reconnection, message retries, ping/pong & message queueing.",
  "version": "0.0.12",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "typings": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs",
      "default": "./dist/main.cjs"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "dev": "vite"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.8.9",
    "prettier": "^3.0.3",
    "rollup-plugin-typescript-paths": "^1.4.0",
    "tslib": "^2.6.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "keywords": [
    "websocket",
    "client",
    "reconnecting",
    "reconnection",
    "reconnect",
    "forever",
    "persistent",
    "forever",
    "automatic"
  ],
  "license": "MIT",
  "author": "Bilal Afzal <bilalafzal1911@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bilalafzal01/resilient-ws.git"
  },
  "homepage": "https://github.com/bilalafzal01/resilient-ws/tree/main#readme"
}
